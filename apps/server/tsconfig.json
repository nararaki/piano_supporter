{
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "target": "es2022",
    "strict": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "baseUrl": ".", 
    "paths": {
      "@root/*": ["./*"],
    }
  },
  "include": [
    "./src/**/*",
    "../packages/lib/**/*.ts",
    "../packages/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}