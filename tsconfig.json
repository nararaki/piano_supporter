{
	"compilerOptions": {
		"target": "ES2022",
		"module": "es2022",
		"moduleResolution": "Node",
		"strict": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"resolveJsonModule": true,
		"noUncheckedIndexedAccess": true,
		"declaration": true,
		"declarationMap": true,
		"baseUrl": "."
	},
	"exclude": ["node_modules", "dist", "**/dist", "**/node_modules"]
}
