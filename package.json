{
	"name": "piano_supporter",
	"version": "1.0.0",
	"scripts": {
		"dev:server": "npm run dev --workspace=@piano_supporter/server",
		"dev:client": "npm run dev --workspace=@piano_supporter/client",
		"build": "esbuild  --format=esm --bundle src/interface/index.ts --platform=node --outfile=dist/bundle.js  --packages=external",
		"check": "biome check --write .",
		"start": "node dist/bundle.js",
		"db:generate": "npm run generate --workspace=@piano_supporter/server",
		"db:migrate": "npm run migrate --workspace=@piano_supporter/server",
		"db:clear": "npm run clear --workspace=@piano_supporter/server",
		"db:seed": "npm run seed --workspace=@piano_supporter/server"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/nararaki/piano_supporter.git"
	},
	"keywords": [],
	"author": "",
	"license": "MIT",
	"dependencies": {},
	"devDependencies": {
		"@biomejs/biome": "2.3.5",
		"@types/node": "^24.10.1",
		"tsx": "^4.20.6",
		"typescript": "^5.9.3",
		"vitest": "^4.0.9"
	},
	"workspaces": [
		"apps/client",
		"apps/server",
		"packages/*"
	]
}
