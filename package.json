{
	"name": "piano_supporter",
	"version": "1.0.0",
	"scripts": {
		"dev:server": "npm run dev --workspace=@piano_supporter/server",
		"dev:client": "npm run dev --workspace=@piano_supporter/client",
		"build": "esbuild  --format=esm --bundle src/interface/index.ts --platform=node --outfile=dist/bundle.js  --packages=external",
		"check": "biome check --write .",
		"start": "node dist/bundle.js",
		"db:generate": "drizzle-kit generate"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/nararaki/piano_supporter.git"
	},
	"keywords": [],
	"author": "",
	"license": "MIT",
	"dependencies": {
		"@clerk/nextjs": "^6.35.4",
		"@hono/node-server": "^1.19.6",
		"@radix-ui/react-dialog": "^1.1.15",
		"@radix-ui/react-label": "^2.1.8",
		"@radix-ui/react-slot": "^1.2.4",
		"@radix-ui/react-tabs": "^1.1.13",
		"@tailwindcss/postcss": "^4.1.17",
		"autoprefixer": "^10.4.22",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"dotenv": "^17.2.3",
		"drizzle-orm": "^0.44.7",
		"hono": "^4.10.6",
		"lucide-react": "^0.554.0",
		"postcss": "^8.5.6",
		"react": "^19.2.0",
		"tailwind-merge": "^3.4.0",
		"tailwindcss": "^4.1.17",
		"tw-animate-css": "^1.4.0",
		"uuidv7": "^1.0.2",
		"zod": "^4.1.12"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.5",
		"@types/node": "^24.10.1",
		"@types/react": "^19.2.6",
		"drizzle-kit": "^0.31.7",
		"tsx": "^4.20.6",
		"typescript": "^5.9.3",
		"vitest": "^4.0.9"
	},
	"workspaces": [
		"apps/client",
		"apps/server",
		"packages/*"
	]
}
